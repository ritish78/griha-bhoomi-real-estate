{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false,
    "target": "es2016",
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["**/*.ts"]
}
